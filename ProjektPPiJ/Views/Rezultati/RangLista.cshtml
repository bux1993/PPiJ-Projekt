@model IEnumerable<ProjektPPiJ.Models.RangListaViewModel>
@{
    ViewBag.Title = "StvoriPoredak";
}

<h2>Ljestvice sa TOP 10 mahera u svakoj kategoriji</h2>

@foreach (var item in Model)
{
    if (item.KategorijaName != "arrow" && item.KategorijaName != "talijan")
    {
        
    <h3>@Html.DisplayFor(model => item.KategorijaName)</h3> 
    <table class="table table-striped info">
        <tr class="danger">
            <th>
                Username
            </th>
            <th>
                Rezultat
            </th> 
        </tr>

        @foreach (var rezultat in item.Poredak) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => rezultat.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => rezultat.NajboljiRezultat)
                </td>
            </tr>
         }
    </table>
    <div class="col-md-12"></div>
    }
}
