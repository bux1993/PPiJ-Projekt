@model IEnumerable<ProjektPPiJ.Models.Pitanja>

@{
    ViewBag.Title = "Test";
}

<h2>Let's play a game.</h2>
<h2>Good luck bitches!!</h2>

<link href="~/Content/CountDown.css" rel="stylesheet" />
<script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.countdown.js"></script>
<script src="~/Scripts/jquery.countdown.min.js"></script>


<div id="clock" class="text-right"></div>
<script type="text/javascript">
    $('#clock').countdown(new Date( new Date().getTime() + 10 * 60 * 1000), function (event) {
        var totalHours = event.offset.totalDays * 24 + event.offset.hours;
        $(this).html(event.strftime('%M min %S sec'));
    });
</script>



@foreach (var item in Model)
{
    if (item.VrstaPitanja1.VrstaPitanja1.Equals("Ponuđeni odgovori"))
    {
        <div class="alert alert-dismissible alert-info">
            <div>@Html.DisplayFor(m => item.Pitanje)</div>
            <div>
                <span>@Html.RadioButton("Odgovor", "Točno")</span>
                <span>@Html.DisplayFor(m => item.TocanOdgovor)</span>
            </div>
            <div>
                <span>@Html.RadioButton("Odgovor", "Netočno")</span>
                <span>@Html.DisplayFor(m => item.KriviOdgovor)</span>
            </div>
            <div>
                <span>@Html.RadioButton("Odgovor", "Netočno")</span>
                <span>@Html.DisplayFor(m => item.KriviOdgovor2)</span>
            </div>
            <div>
                <span>@Html.RadioButton("Odgovor", "Netočno")</span>
                <span>@Html.DisplayFor(m => item.KriviOdgovor3)</span>
            </div>
        </div>
    }
    else if (item.VrstaPitanja1.VrstaPitanja1.Equals("Unos odgovora"))
    {
        <div class="alert alert-dismissible alert-info">
            <div>@Html.DisplayFor(m => item.Pitanje)</div>
            <div>
                @Html.TextBox("Unos Odgovor")
            </div>
        </div>
    }
    else if (item.VrstaPitanja1.VrstaPitanja1.Equals("Što je na slici"))
    {

    }
}
